import java.util.Scanner;
public class ASCII {
    public static void main(String[] args) {
        int n;
        Scanner sc = new Scanner(System.in);
        System.out.println("If you want to convert ASCII values to a string, type 1.");
        System.out.println("If you want to convert a string to its ASCII values, type 2.");
        int input = sc.nextInt();

        if (input != 1) {
            if (input != 2)
                System.out.print("Please type only 1 or 2.");
        }

        if (input == 1) {
            System.out.print("Enter the total number of ASCII values: ");
            n = sc.nextInt();

            int[] array = new int[n];

            System.out.println("Enter each individual ASCII value: ");
            for (int i = 0; i < n; i++) {
                array[i] = sc.nextInt();
            }

            System.out.print("The string is: ");

            for (int i = 0; i < n; i++) {
                System.out.print(Character.toString((char) array[i]));
            }
        }

        else if (input == 2) {
            Scanner obj = new Scanner(System.in);

            System.out.print("Enter the string: ");
            String string = obj.nextLine();

            int stringlength = string.length();

            for (int j = 0; j < stringlength; j++) {
                char character = string.charAt(j);
                int ascii = (int) character;
                System.out.println(character + " = " + ascii);
            }
        }
    }
}
