import java.util.Scanner;
public class StarPattern {

    public static void main(String[] ars) {

        System.out.println("Enter the number of rows: ");
        Scanner obj = new Scanner(System.in);
        int x = obj.nextInt();

        int i; int j;
        for (i=1; i<=x; i++) {
            for (j=1; j<=i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
