import time
input3 = 2

input1 = int(input("Enter 1 to start acceleration timing.\nEnter 2 to start lap timing.\n"))

if input1 == 1:
    start1 = time.time()

    input2 = int(input("Enter 1 again when you want to get the acceleration time.\n"))
    end1 = time.time()

    elapsed1 = end1 - start1
    print("The acceleration time is ", elapsed1, " seconds.")

elif input1 == 2:
    start2 = time.time()

    while input3 != 0:

        input3 = int(input("Enter 1 when the next lap starts.\nEnter 0 when you want the program to stop.\n"))

        if input3 == 1:
             end2 = time.time()
             elapsed2 = end2 - start2
             print("The lap time is ", elapsed2, " seconds.")
             start2 = end2

        elif input3 == 0:
            print("The program is stopped.")
