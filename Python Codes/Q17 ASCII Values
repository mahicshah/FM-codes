text = int(input("If you want to convert ASCII values to a string, type 1.\nIf you want to convert a string to its ASCII values, type 2.\n"))

if text == 1:
    arr = list()
    n = input("Enter how many elements you want: ")
    print("Enter numbers in array: ")
    for i in range(int(n)):
        n = input()
        arr.append(int(n))

    res = ''.join(chr(val) for val in arr)

    print("The string is: ", str(res))

elif text == 2:
    string = input("Enter a string of text: ")
    list_of_characters = list(string)
    list_of_ord_values = [ord(character) for character in list_of_characters]
    print(list_of_ord_values)
